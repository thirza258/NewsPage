<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardElevation="0dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >

         <ImageView
              android:id="@+id/new_news_image"
              android:layout_width="100dp"
              android:layout_height="match_parent"
              android:scaleType="centerCrop"
              android:src="@drawable/image_retro_pcs"
             android:layout_margin="10dp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginLeft="10dp">

           <TextView
               android:id="@+id/indexs"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="01"
                android:textColor="@color/grayish_blue"
                android:textSize="30sp"
               android:fontFamily="@font/inter_bold"

               />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="top"
                android:textColor="@color/very_dark_blue"
                android:textSize="20sp"
               android:fontFamily="@font/inter_bold"
               android:id="@+id/new_news_title"
               />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="isi"
               android:textSize="15sp"
               android:fontFamily="@font/inter"
               android:id="@+id/new_news_content"
               android:layout_marginBottom="60dp"
               />

       </LinearLayout>



   </LinearLayout>

</androidx.cardview.widget.CardView>